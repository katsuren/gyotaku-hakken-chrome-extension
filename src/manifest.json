{
    "manifest_version": 2
    , "name": "GyotakuHakken"
    , "version": "1.0.0"

    , "description": "ページの魚拓をチェックする拡張"

    , "icons": {
        "16": "img/16.png"
        , "48": "img/48.png"
        , "128": "img/128.png"
    }

    , "permissions": [
        "tabs"
        , "storage"
        , "http://*/*"
        , "https://*/*"
    ]

    , "browser_action": {
        "default_title": "GyotakuHakken"
        , "default_popup": "html/popup.html"
    }
}
